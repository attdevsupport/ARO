#cd `dirname $0`
if [ -z "$JAVACMD" ] ; then
  echo "Creating var JAVACMD"
  if [ -n "$JAVA_HOME"  ] ; then
    JAVACMD="$JAVA_HOME/bin/java"
    echo "Set JAVACMD to: $JAVACMD"
  fi
fi

if [ -z "$JAVACMD" ] ; then
  JAVACMD=`which java 2> /dev/null `
  if [ -z "$JAVACMD" ] ; then
    JAVACMD=java
  fi
fi

if [ ! -x "$JAVACMD" ] ; then
  echo "Cannot execute Java runtime: $JAVACMD"
  exit 1
fi
echo "java path: $JAVACMD"

